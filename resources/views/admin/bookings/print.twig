<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ lang.bookings }}</title>
    {% include 'partials/reportcss.twig' %}
</head>
<body>
<h4>{{ lang.bookings }}</h4>
<div class="vItems">
    <table class="table">
        <thead>
        <tr>
            <th>{{ lang.bookings_user_id }}</th>                 
        <th>{{ lang.bookings_bus_id }}</th>                 
        <th>{{ lang.bookings_seat_id }}</th>                 
        <th>{{ lang.bookings_from_location }}</th>                 
        <th>{{ lang.bookings_to_location }}</th>                 
        <th>{{ lang.bookings_date }}</th>                 
        <th>{{ lang.bookings_time_start }}</th>                 
        <th>{{ lang.bookings_time_end }}</th>                 
        <th>{{ lang.bookings_status }}</th>                 
        
        </tr>
        </thead>
        <tbody>
        {% for row in bookings %}
            <tr>
                <td>{{ row.user_id }}</td>              
            <td>{{ row.bus_id }}</td>              
            <td>{{ row.seat_id }}</td>              
            <td>{{ row.from_location }}</td>              
            <td>{{ row.to_location }}</td>              
            <td>{{ row.date }}</td>              
            <td>{{ row.time_start }}</td>              
            <td>{{ row.time_end }}</td>              
            <td>{{ row.status }}</td>              
            
            </tr>
        {% endfor  %}
        </tbody>
    </table>
</div>
</body>