{% extends "layouts/app.twig" %}
{% block title %}{{ lang.buses }} {{ lang.details }}{% endblock %}
{% block content %}
    <div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">
                    <a href="{{ route('buses.index') }}" class="text-dark">{{ lang.buses }}</a>
                </div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item active" aria-current="page">{{ lang.buses }} {{ lang.details }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-primary btn-sm" href="{{ route('buses.index') }}">
                            <i class="bi bi-reply font16"></i>{{ lang.go_back }}</a>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="row">
                <div class="col-xl-7 mx-auto">
                    <div class="card shadow-none border">
                        <div class="card-body">
                            <ul class="list-group">
                                   
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0">{{ lang.buses_kode_bus }}</h6>
                                    <span class="text-secondary">{{buses.kode_bus}}</span>
                                </li>
                    
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0">{{ lang.buses_plat_bus }}</h6>
                                    <span class="text-secondary">{{buses.plat_bus}}</span>
                                </li>
                    
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0">{{ lang.buses_jumlah_kursi }}</h6>
                                    <span class="text-secondary">{{buses.jumlah_kursi}}</span>
                                </li>
                
                               
                            </ul>
                            
                        </div>
                    <p class="text-center">
                        <a href="{{route('buses.edit',{'id':buses.id})}}" class="btn btn-outline-primary">{{ lang.edit }} {{ lang.buses }}</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
