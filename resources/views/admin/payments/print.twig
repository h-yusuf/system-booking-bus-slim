<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ lang.payments }}</title>
    {% include 'partials/reportcss.twig' %}
</head>
<body>
<h4>{{ lang.payments }}</h4>
<div class="vItems">
    <table class="table">
        <thead>
        <tr>
            <th>{{ lang.payments_booking_id }}</th>                 
        <th>{{ lang.payments_amount }}</th>                 
        <th>{{ lang.payments_status }}</th>                 
        
        </tr>
        </thead>
        <tbody>
        {% for row in payments %}
            <tr>
                <td>{{ row.booking_id }}</td>              
            <td>{{ row.amount }}</td>              
            <td>{{ row.status }}</td>              
            
            </tr>
        {% endfor  %}
        </tbody>
    </table>
</div>
</body>