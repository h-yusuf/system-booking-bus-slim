
{% extends "layouts/app.twig" %}

{% block title %}{{ lang.add }} {{ lang.tbusers }}{% endblock %}

{% block content %}
<div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3"><a href="{{route('tbusers.index')}}" class="text-dark">{{ lang.tbusers }}</a></div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item active" aria-current="page">{{ lang.add }} {{ lang.tbusers }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-primary btn-sm" href="{{route('tbusers.index')}}"><i class="bi bi-reply font16"></i> {{ lang.go_back }}</a>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->

            <div class="row">
                <div class="col-xl-7 mx-auto">
                {% include'partials/flash.twig' %}
                    <div class="card border shadow-none">
                        <div class="card-body p-5">
                            <form class="row g-3" method="post" action="{{ route('tbusers.store') }}" enctype="multipart/form-data">
                                {{ csrf.field | raw }}
                        
                            <div class="col-md-12">
                                <label class="control-label" for="username">{{ lang.tbusers_username }}</label>
	                             <input id="username" name="username" class="form-control {{ errors.username ? ' is-invalid' : '' }}" type="text" maxlength="50"  value="" />
                                {% if errors.username %}
                                   <div class="invalid-feedback">{{ errors.username | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="password">{{ lang.tbusers_password }}</label>
	                             <input id="password" name="password" class="form-control {{ errors.password ? ' is-invalid' : '' }}" type="text" maxlength="255"  value="" />
                                {% if errors.password %}
                                   <div class="invalid-feedback">{{ errors.password | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="name">{{ lang.tbusers_name }}</label>
	                             <input id="name" name="name" class="form-control {{ errors.name ? ' is-invalid' : '' }}" type="text" maxlength="100"  value="" />
                                {% if errors.name %}
                                   <div class="invalid-feedback">{{ errors.name | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="role">{{ lang.tbusers_role }}</label>
	                             <select name="role" id="role" class="form-control {{ errors.role ? ' is-invalid' : '' }}">
	                               <option value=""></option>
                                   <option value="owner">owner</option>
                                   <option value="admin">admin</option>
                                   <option value="user">user</option>
                                 </select>
                                {% if errors.role %}
                                   <div class="invalid-feedback">{{ errors.role | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="nik">{{ lang.tbusers_nik }}</label>
	                             <input id="nik" name="nik" class="form-control {{ errors.nik ? ' is-invalid' : '' }}" type="text" maxlength="20"  value="" />
                                {% if errors.nik %}
                                   <div class="invalid-feedback">{{ errors.nik | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="no_hp">{{ lang.tbusers_no_hp }}</label>
	                             <input id="no_hp" name="no_hp" class="form-control {{ errors.no_hp ? ' is-invalid' : '' }}" type="text" maxlength="15"  value="" />
                                {% if errors.no_hp %}
                                   <div class="invalid-feedback">{{ errors.no_hp | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="email">{{ lang.tbusers_email }}</label>
	                             <input id="email" name="email" class="form-control {{ errors.email ? ' is-invalid' : '' }}" type="text" maxlength="100"  value="" />
                                {% if errors.email %}
                                   <div class="invalid-feedback">{{ errors.email | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="jenis_kelamin">{{ lang.tbusers_jenis_kelamin }}</label>
	                             <select name="jenis_kelamin" id="jenis_kelamin" class="form-control {{ errors.jenis_kelamin ? ' is-invalid' : '' }}">
	                               <option value=""></option>
                                   <option value="male">male</option>
                                   <option value="female">female</option>
                                 </select>
                                {% if errors.jenis_kelamin %}
                                   <div class="invalid-feedback">{{ errors.jenis_kelamin | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary px-5" name="btn-save">
                                   {{ lang.add }}
                                </button>
                            </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
